{
  "name": "eslint-config-ristretto-react",
  "description": "Utility functions to merge MUI's theme into TailwindCSS",
  "author": "just-koohii",
  "license": "MIT",
  "version": "1.0.0",
  "keywords": [
    "eslint",
    "eslint-config",
    "config",
    "javascript",
    "typescript",
    "styleguide",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/just-koohii/eslint-config-ristretto.git"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc -p ./tsconfig.build.json && cp LICENSE ./dist",
    "typecheck": "tsc -p ./tsconfig.build.json --noEmit",
    "package": "rm ./*.tgz && npm pack",
    "test": "vitest",
    "test:ci": "vitest --run"
  },
  "dependencies": {
    "eslint-config-ristretto": "workspace:*"
  },
  "devDependencies": {
    "@types/eslint": "*",
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-promise": "*",
    "tsconfig": "workspace:*",
    "typescript": "*",
    "vitest": "*"
  },
  "peerDependencies": {
    "@typescript-eslint/eslint-plugin": "*",
    "@typescript-eslint/parser": "*",
    "eslint": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jsx-a11y": "*",
    "eslint-plugin-promise": "*",
    "eslint-plugin-react": "*",
    "eslint-plugin-react-hooks":  "*"
  }
}
